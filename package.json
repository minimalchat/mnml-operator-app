{
  "name": "operator",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Minimal Chat Application",
  "author": "Matthew Mihok <matthew@minimal.chat>",
  "private": true,
  "license": "UNLICENSED",
  "repository": "minimalchat/mnml-app.git",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage && cat coverage/lcov.info | coveralls",
    "lint": "eslint src --ext .js,.jsx",
    "build": "webpack --progress --colors",
    "build:watch": "webpack --progress --colors --watch",
    "compile": "electron-packager . --all --out=dist/",
    "start": "electron ."
  },
  "jest": {
    "setupFiles": [
      "./test/jest.setup.js"
    ],
    "setupTestFrameworkScriptFile": "node_modules/jest-enzyme/lib/index.js",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/webpack*.js",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/file.mock.js",
      "^.+\\.(css|scss)$": "<rootDir>/test/style.mock.js"
    },
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/assets/",
      "/dist/"
    ],
    "testRegex": "((test|spec))\\.(js|jsx)$"
  },
  "dependencies": {
    "faker": "^4.1.0",
    "electron": "^1.4.1",
    "moment": "^2.17.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.2",
    "socket.io-client": "^1.7.3",
    "whatwg-fetch": "^2.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "coveralls": "^2.11.14",
    "css-loader": "^0.26.1",
    "electron-packager": "^8.5.1",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.10.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "jest": "^18.1.0",
    "jest-cli": "^17.0.3",
    "jest-enzyme": "^2.1.0",
    "react-addons-css-transition-group": "^15.3.2",
    "react-addons-test-utils": "^15.4.1",
    "react-test-renderer": "^15.4.1",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0"
  }
}
